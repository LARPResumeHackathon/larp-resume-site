<div class="form-row">
  <%= f.label :game_id, "Run of Game" %>
  <%= f.collection_select :game_id, Game.all.order(:title), :id, :title, prompt: true %>
</div>

<div class="form-row">
  <%= f.label :description %>
  <%= f.text_area :description %>
</div>

<div class="form-row">
  <%= f.label :website %>
  <%= f.url_field :website %>
</div>

<div class="form-row">
  <%= f.label :start_datetime, "Start Date & Time" %>
  <%= f.datetime_select :start_datetime %>
</div>

<div class="form-row">
  <%= f.label :end_datetime, "End Date & Time" %>
  <%= f.datetime_select :end_datetime %>
</div>

<div class="form-row">
  <%= f.label :location %>
  <%= f.text_field :location %>
</div>

<div class="form-row">
  <%= f.label :private, "Make this run private?" %>
  <%= f.check_box :private %>
</div>

<div class="form-row">
  <%= f.submit, "Save" %>
</div>
